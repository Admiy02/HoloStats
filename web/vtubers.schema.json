{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": ["vtubers", "batches"],
  "properties": {
    "vtubers": {
      "type": "object",
      "patternProperties": {
        "^.*$": { "$ref": "#/definitions/vtuber" }
      },
      "additionalProperties": false
    },
    "batches": {
      "type": "object",
      "patternProperties": {
        "^.*$": { "$ref": "#/definitions/batch" }
      },
      "additionalProperties": false
    }
  },
  "definitions": {
    "vtuber": {
      "type": "object",
      "required": ["name", "id", "default", "youtube", "bilibili"],
      "properties": {
        "name": { "type": "string" },
        "id": { "type": "string" },
        "twitter": { "type": "string" },
        "youtube": {
          "anyOf": [
            {
              "type": "string",
              "minLength": 24,
              "maxLength": 24
            },
            { "type": "null" }
          ]
        },
        "bilibili": {
          "anyOf": [{ "type": "number" }, { "type": "null" }]
        },
        "default": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "batch": {
      "type": "object",
      "required": ["id", "name", "vtubers"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "vtubers": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    }
  }
}
