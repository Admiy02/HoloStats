{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": [
    "items"
  ],
  "properties": {
    "last_modified": {
      "type": "string",
      "format": "date-time"
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": [
          "name",
          "id",
          "members"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "members": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "object",
              "required": [
                "name",
                "id",
                "default"
              ],
              "anyOf": [
                {
                  "required": [
                    "youtube"
                  ]
                },
                {
                  "required": [
                    "bilibili"
                  ]
                }
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                },
                "twitter": {
                  "type": "string"
                },
                "youtube": {
                  "type": "string",
                  "minLength": 24,
                  "maxLength": 24
                },
                "bilibili": {
                  "type": "number"
                },
                "default": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    }
  }
}
