{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": [
    "items"
  ],
  "properties": {
    "last_modified": {
      "type": "string",
      "format": "date-time"
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": [
          "name",
          "id",
          "members"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "members": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "object",
              "required": [
                "name",
                "id",
                "default",
                "youtube",
                "bilibili"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                },
                "twitter": {
                  "type": "string"
                },
                "youtube": {
                  "anyOf": [
                    {
                      "type": "string",
                      "minLength": 24,
                      "maxLength": 24
                    },
                    {
                      "type": "null"
                    }
                  ]
                },
                "bilibili": {
                  "anyOf": [
                    {
                      "type": "number"
                    },
                    {
                      "type": "null"
                    }
                  ]
                },
                "default": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    }
  }
}
